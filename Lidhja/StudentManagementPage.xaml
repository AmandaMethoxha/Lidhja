<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lidhja.StudentManagementPage">



        <!-- Title Section -->
    <VerticalStackLayout Spacing="20" Padding="0">
        <StackLayout BackgroundColor="#522CD5" 
                     Padding="40"
                     HorizontalOptions="FillAndExpand"
                     VerticalOptions="Start">
            <Label Text="Student Manegement" FontSize="45" HorizontalOptions="Center" TextColor="White"/>
        </StackLayout>


         <!-- Buttons Section -->
        <StackLayout Padding="150" VerticalOptions="Center" HorizontalOptions="Center">
            <Button Text="Add New Student" Clicked="OnAddNewStudentClicked" WidthRequest="500" HeightRequest="100" Margin="10" FontSize="30" />
            <Button Text="Students List" Clicked="OnStudentsListClicked" WidthRequest="500" HeightRequest="100" Margin="10" FontSize="30" />
   
  
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>
